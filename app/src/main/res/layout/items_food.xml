<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_marginTop="10dp"
    android:background="@color/md_grey200"
    android:layout_height="match_parent">

    <com.vancuong.ngonngonmoingay.Untils.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/profile_image"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/bga"
        app:civ_border_color="#0000"
        app:civ_border_width="2dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_name"
        android:text="Cường"
        android:textStyle="bold"
        android:layout_marginLeft="60dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="vừa lên sóng"
        android:layout_toRightOf="@+id/tv_name"
        android:layout_marginLeft="5dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_timecreate"
        android:text="1 phút trước"
     android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginRight="10dp"
        android:background="@color/colorWhite"
        android:layout_marginLeft="60dp">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:id="@+id/img_viewfood"
            android:src="@drawable/bga"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:layout_below="@+id/img_viewfood"
            android:textStyle="bold"
            android:textSize="20dp"
            android:id="@+id/tv_titlefood"
            android:padding="10dp"
            android:text="Title"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:layout_below="@+id/tv_titlefood"
            android:textSize="18dp"
            android:id="@+id/tv_descriptionfood"
            android:padding="10dp"
            android:text="@string/test"/>
    </RelativeLayout>
</RelativeLayout>